@{
    ViewData["Title"] = "Home Page";
}
@* <link rel="stylesheet" href="~/css/styles.css" /> *@

<!-- Stylesheet -->
<style>
    body {
        background-color: #f4f4f4;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .hero-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background: linear-gradient(135deg, #0056b3, #007bff);
        color: #ffffff;
        text-align: center;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .tagline {
        font-size: 1.5rem;
        font-style: italic;
        color: #dbe6f6;
        margin-bottom: 1.5rem;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.2s;
    }

    .btn-primary {
        background-color: #0069d9;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #f8f9fa;
        color: #333333;
    }

        .btn-secondary:hover {
            background-color: #e9ecef;
            transform: scale(1.05);
        }
</style>

<!-- Content -->
<div class="hero-section">
    <h1 class="hero-title">TEKSA HOLDINGS</h1>
    <p class="tagline"> File Management System</p>

    <div class="action-buttons">
        <a href="/File/Index" class="btn btn-secondary">View Files</a>
        <a href="/File/Upload" class="btn btn-secondary">Upload File</a>
    </div>
</div>
